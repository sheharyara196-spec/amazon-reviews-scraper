{
  "title": "Amazon Reviews Scraper",
  "type": "object",
  "properties": {
    "startUrls": {
      "title": "Start URLs",
      "type": "array",
      "description": "List of Amazon product URLs to scrape",
      "editor": "textfield"
    },
    "maxReviews": {
      "title": "Maximum Reviews",
      "type": "integer",
      "default": 30
    },
    "stars": {
      "title": "Star Rating Filter",
      "type": "string",
      "enum": ["all", "one_star", "two_star", "three_star", "four_star", "five_star"],
      "default": "all"
    },
    "sortBy": {
      "title": "Sort Reviews",
      "type": "string",
      "enum": ["recent", "top_rated", "helpful"],
      "default": "recent"
    },
    "reviewerType": {
      "title": "Reviewer Type",
      "type": "string",
      "enum": ["all_reviews", "verified_purchase"],
      "default": "all_reviews"
    },
    "mediaType": {
      "title": "Media Type",
      "type": "string",
      "enum": ["all_contents", "with_images", "with_videos"],
      "default": "all_contents"
    }
  },
  "required": ["startUrls"]
}
