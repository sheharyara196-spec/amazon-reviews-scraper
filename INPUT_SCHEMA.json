{
  "title": "Amazon Reviews Scraper",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "asin": {
      "title": "ASIN",
      "type": "string",
      "description": "Amazon ASIN of the product you want to scrape"
    },
    "domainCode": {
      "title": "Amazon Domain",
      "type": "string",
      "enum": ["com", "co.uk", "de", "in"],
      "default": "com",
      "description": "Which Amazon marketplace to scrape"
    },
    "filterByStar": {
      "title": "Filter by star rating",
      "type": "string",
      "enum": ["one_star", "two_star", "three_star", "four_star", "five_star", "all_stars"],
      "default": "all_stars"
    },
    "sortBy": {
      "title": "Sort reviews by",
      "type": "string",
      "enum": ["recent", "top_rated"],
      "default": "recent"
    },
    "maxReviews": {
      "title": "Max number of reviews to scrape",
      "type": "integer",
      "default": 30
    }
  },
  "required": ["asin"]
}
